@using BlogApplication.Models.Constants.Controllers
@model BlogApplication.Models.ViewModels.Manage.ManageViewModel

<div class="container mt-4">
    <div class="row">
        <div class="col-sm-9">
            <h2>My Profile</h2>
            <p class="text-success">@Model.StatusMessage</p>
        </div>
    </div>
    <dl class="row">
        <dt class="col-sm-3">Password:</dt>
        <dd class="col-sm-9">
            @Html.ActionLink("Change your password", ActionNames.ChangePassword, null, new {@class = "btn btn-sm btn-outline-secondary"})
        </dd>
        @if (User.IsInRole(UserRoles.Editor))
        {
            <dt class="col-sm-3">My published articles:</dt>
            <dd class="col-sm-9">
                @Html.ActionLink("Article list", ActionNames.List, ControllerNames.Article, null, new {@class = "btn btn-sm btn-outline-secondary"})
            </dd>
        }
    </dl>
</div>